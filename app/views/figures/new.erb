<form action='/figures' method='post'>
  <label>Figure name</label>
  <input type="text" name="figure[name]" id="figure_name"></input>
</br>
  <label>Figure landmark</label>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%=landmark.id%>" value="<%=landmark.id%>"><%=landmark.name%></input></br>
  <% end %>
</br>
<label>Create a new landmark</label>
  <input type="text" name="landmark[name]" id="new_landmark"></input>
</br>itles
  <% @t.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%=title.id%>" value="<%=title.id%>"><%=title.name%></input></br>
  <% end %>
</br>
<label>Create a new title</label>
  <input type="text" name="title[name]" id="new_title"></input>
</br>

  <input type="submit" value="Create New Figure"></button>
</form>
